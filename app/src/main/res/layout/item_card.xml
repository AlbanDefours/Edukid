<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/backgroundImgMemory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_margin="10px"
        app:srcCompat="@drawable/backgroundmemory" />

    <ImageView
        android:id="@+id/elementMemory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/returnImgMemory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_margin="10px"
        app:srcCompat="@drawable/imgreturn" />

    <ImageView
        android:id="@+id/patternImgMemory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_margin="10px"
        app:srcCompat="@drawable/patternimg" />


</RelativeLayout>